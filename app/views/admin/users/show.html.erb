<%= render partial: "shared/header" %>
<%= render partial: "shared/sidebar" %>
<main id="main" class="main">
    <div class="pagetitle">
      <h1>User Details</h1>
    </div><!-- End Page Title -->
    <section class="section Users">
     
    
    <%if @user.profile.present?%>
    
    
        <div class="card " style="max-width:40rem;" >
          <div class="card-body">
            <h5 class="card-title mb-1 pb-0"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h5>
              
                <div class ="row align-items-center justify-content-center">
                  
                  <%if @user.profile.image.present?%>
                    
                    <div class="col-6 p-3">
                    <%= image_tag(@user.profile.image, class: 'img-fluid rounded-circle',style:"height:200px;width:200px;") %>
                    <%end%>      
                    </div>
                  
                </div>



                  <table class="table table-stripped">
                    <tbody>
                      <tr>
                        <td class = "text-muted"><i class="fa-solid fa-envelope"></i>  Email</td>
                        <td><%= @user.email %></td>
                      </tr>
                      <tr>
                        <td class = "text-muted"> <i class="fa-solid fa-calendar-days"></i> Date of Birth</td>
                        <td><%= @user.profile.dob %></td>
                      </tr>
                      <tr>
                        <td class = "text-muted"> <i class="fa-solid fa-mobile"></i> Phone Number</td>
                        <td><%= @user.profile.phone_number %></td>
                      </tr>
                      <tr>
                        <td class = "text-muted"><i class="fa-solid fa-house"></i> Address</td>
                        <td><%= @user.profile.address%></td>
                      </tr>
                      
                    </tbody>
                  </table>
                  <div class="row">
                    <div class="col-3"><%= link_to "Back",admin_users_path, class:"btn btn-secondary" %></div>
                    <div class="col-6"></div>
                    <div class="col-3"><a class="btn btn-primary" href="mailto:<%=@user.email%>">Contact user</a></div>
                  </div>
              
          </div>
        </div>
    <%else%>
  <div class="p-5">
      <h4>User has no profile</h4>
      </div>
    <%end%>
 
    </section>

</main><!-- End #main -->


<%= render partial: "shared/footer" %>
