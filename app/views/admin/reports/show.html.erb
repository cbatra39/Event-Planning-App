<p style="color: green"><%= notice %></p>


<%= render partial: "shared/header" %>
<%= render partial: "shared/sidebar" %>

<main id="main" class="main">
    <div class="pagetitle">
      <h1>Report Details</h1>
      
    </div><!-- End Page Title -->
    <section class="section Users">
      <div class="row">
        <div class="col-12 ">
        
              <div class="card recent-sales overflow-auto">
                <div class="card-body ">
                  <h3  style="margin-top: 10px; font-weight: bold; ">
                  <%if @report.report_type == 1 %>
                      <%= @data.title%>
                  <%else%>
                      <%= @data.email%>
                  <%end%>
                  </h3>
                  
                                        
                <p class="card-text" style="display: flex; justify-content: center;">
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <span class="text-lightgrey">Reported by</span>
                  </td>
                  <td><%= User.find_by(id:@report.reported_by_id).email %></td>
                </tr>
                <tr>
                  <td>
                    <span class="text-lightgrey">Description</span>
                  </td>
                  <td>
                    <%= @report.description%>
                  </td>

                </tr>
                <tr>
                  <td>
                    <span class="text-lightgrey">Report Status</span>
                  </td>
                  <td><% if @report.status == 'reported' %>
                          <span class="badge bg-warning">Reported</span>
                        <% elsif @report.status == 'approved'%>
                          <span class="badge bg-success">Approved</span>
                       
                        <%else%>
                          <span class="badge bg-danger">Inactive</span>
                        <% end %></td>
                </tr>
                
              </tbody>
            </table>
          </p>  
          
          <div>
          <br>
            <%= link_to "Back", admin_reports_path ,class:"btn btn-secondary"%>
         </div>
                </div>
              </div>
          </div>
      </div>
    </section>

</main><!-- End #main -->
<%= render partial: "shared/footer" %>



















