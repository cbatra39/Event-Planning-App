<%= render partial: "shared/header" %>
<%= render partial: "shared/sidebar" %>
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", authenticated_root_path %></li>
          <li class="breadcrumb-item">Users</li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
        <% if current_user.profile.present? %>
              <h2><%= current_user.profile.first_name %></h2>
              <%= image_tag(current_user.profile.image, alt: 'Profile', class: 'rounded-circle') %>
              <%end%>
              <div class="social-links mt-2">
                <%# <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a> %>
              </div>
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Settings</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                </li>

              </ul>
              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                 <% if current_user.profile.present? %>
                  <h5 class="card-title">Profile Details</h5>
                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Full Name</div>
                    <div class="col-lg-9 col-md-8"><%= current_user.profile.first_name %> <%= current_user.profile.last_name %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Date of Birth</div>
                    <div class="col-lg-9 col-md-8"><%= current_user.profile.dob %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Phone Number</div>
                    <div class="col-lg-9 col-md-8"><%= current_user.profile.phone_number %></div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Address</div>
                    <div class="col-lg-9 col-md-8"><%= current_user.profile.address %></div>
                  </div>

                

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    <div class="col-lg-9 col-md-8"><%= current_user.email %></div>
                  </div>
<% end %>
                </div>

                <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                 <% if current_user.profile.present? %>
                  <!-- Profile Edit Form -->
                  <%= form_with( url: admin_profile_path, scope: :profile, method: :patch) do |f| %>
                    
                    <div class="row mb-3">
                      <%= f.label :first_name , "FirstName" ,for:"yourUsername", class: "col-md-4 col-lg-3 col-form-label" %>                      
                      <div class="col-md-8 col-lg-9">
                        <%= f.text_field :first_name, value: current_user.profile.first_name, class: "form-control", id: "fullName" %>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <%= f.label :last_name , "LastName" ,for:"yourUsername", class: "col-md-4 col-lg-3 col-form-label" %>                      
                      <div class="col-md-8 col-lg-9">
                        <%= f.text_field :last_name, value: current_user.profile.last_name, class: "form-control", id: "fullName" %>
                      </div>
                    </div>


                    <div class="row mb-3">
                      <%= f.label :address , "Address" ,id:"Address", class: "col-md-4 col-lg-3 col-form-label" %>                      
                      <div class="col-md-8 col-lg-9">
                        <%= f.text_field :address, value: current_user.profile.address, class: "form-control", id: "Address" %>
                      </div>
                    </div>

                    <div class="row mb-3">
                        <%= f.label :phone_number , "Phone" , class: "col-md-4 col-lg-3 col-form-label" %>                      
                      <div class="col-md-8 col-lg-9">
                        <%= f.text_field :phone_number , value: current_user.profile.phone_number , class: "form-control", id: "Phone" %>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <%= f.label :image , "profileImage" ,for:"yourUsername", class: "form-label" %>                      
                      <div class="col-md-4 col-lg-3 col-form-label">
                          <%= f.file_field :image, style: 'display: none;', id: 'upload-image-field' %>
                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image" onclick="document.getElementById('upload-image-field').click(); return false;">
                              <i class="bi bi-upload"></i>
                            </a>
                      </div>
                    </div>


                    <div class="text-center">
                      <%= f.submit "Save Changes" ,class:"btn btn-primary"%>

                    </div>
                  <% end %><!-- End Profile Edit Form -->
<% end %>
                </div>

                <div class="tab-pane fade pt-3" id="profile-settings">

                  <!-- Settings Form -->
                  
          <%= form_with(url:admin_update_settings_path) do |f| %>
                    <div class="row mb-3">
                     
                      <div class="col-md-8 col-lg-9">
                        <div class="mb-3 row">
                         <label class="col-sm-3 col-form-label">User Status</label>
                         <div class="col-sm-9">
                          <%= f.select( :user_status, [["Inactive", 0], ["Active", 1], ["Verified", 3], ["Unverified", 2],["suspended", 4]],{},{:class =>"form-select"})%>
                          </div>
                        </div>
                        <div class="mb-3 row">
                          <label for="inputRadius" class="col-sm-3 col-form-label">Radius</label>
                          <div class="col-sm-9">
                           <%= f.number_field :radius,class:"form-control",id:"inputRadius"%>
                          </div>
                        </div>
                        <div class="form-check">
                        <%= f.check_box :notifications ,class:"form-check-input"%>
                          <label class="form-check-label" for="proOffers">
                            Enable Notifications
                          </label>
                        </div>
                      </div>
                    </div>

                    <div class="text-center">
                      <%= f.submit "Update Settings",class:"btn btn-primary"%>
                    </div>
                 
          <% end %>
          
                </div>

                <div class="tab-pane fade pt-3" id="profile-change-password">
                  <!-- Change Password Form -->
                    <%= form_for(@resource, as: @resource_name, url: registration_path(@resource_name), html: { method: :put }) do |f| %>                    
                    <div class="row mb-3">
                      <%= render "devise/shared/error_messages", resource: @resource %>
                      <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
                      <div class="col-md-8 col-lg-9">
                        <%= f.password_field :current_password  ,class:"form-control" ,id:"currentPassword" ,autocomplete: "current-password" %>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control", id:"newPassword"%>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
                      <div class="col-md-8 col-lg-9">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"renewPassword"%>
                      </div>
                    </div>

                    <div class="text-center">
                        <%= f.submit "Update"%>
                    </div>
                  <%end %><!-- End Change Password Form -->

                </div>

              </div><!-- End Bordered Tabs -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->

  <%= render partial: "shared/footer" %>
